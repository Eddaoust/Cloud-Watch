{% extends 'base.html.twig' %}

{% block title %}Products Manager{% endblock %}

{% block body %}

    <div class="jumbotron">
        <div class="container">
            <h1 class="display-4">Products Dashboard</h1>
            <p class="lead">The space where you can manage all your products.</p>
            <button class="btn btn-warning" type="button">Products in your shop <span class="badge badge-light">{{ products | length }}</span></button>
            <a href="#" class="btn btn-warning">Add product</a>
        </div>
    </div>

    <div class="row">
        <div class="col-xl-12">
            <h5>Products in the shop: </h5>
            <table class="table table-hover table-bordered table-sm">
                <thead>
                <tr>
                    <th scope="col">Id</th>
                    <th scope="col">Name</th>
                    <th scope="col">Price</th>
                    <th scope="col">Promo</th>
                    <th scope="col">Category</th>
                    <th scope="col">Image</th>
                    <th scope="col">Published</th>
                    <th scope="col">Update</th>
                    <th scope="col">Delete</th>
                </tr>
                </thead>
                <tbody>
                {% for product in products %}
                    <tr>
                        <th scope="row">{{ product.id }}</th>
                        <td>{{ product.name }}</td>
                        <td>{{ product.price }}&euro;</td>
                        <td>{{ product.promo }}%</td>
                        <td>{{ product.category.name }}</td>
                        <td><img src="{{ asset('img/collection/') ~ product.img }}" style="width: 50px"></td>
                        <td style="text-align: center"><a href="#">{% if product.published %}<i class="fas fa-eye"></i>{% else %}<i class="fas fa-eye-slash"></i>{% endif %}</a></td>
                        <td style="text-align: center"><a href="{{ path('product_update', {id: product.id}) }}"><i class="fas fa-pen"></i></a></td>
                        <td style="text-align: center"><a href="#"><i class="fas fa-trash-alt"></i></a></td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>

{% endblock %}