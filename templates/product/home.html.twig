{% extends 'base.html.twig' %}

{% block title %}Home{% endblock %}

{% block body %}
    <div class="jumbotron">
        <div class="container">
            <h1 class="display-4">Cloud Watch</h1>
            <p class="lead">Established in New York City 100 years ago, taste the excellence of a century-old company and leader in its field.</p>
        </div>
    </div>

    <div class="row">
        {% for category in categories %}
            <div class="col-xl-4">
                <div class="card">
                    <img class="card-img-top" src="{{ asset('img/') ~ category.img }}" alt="Card image cap">
                    <div class="card-body">
                        <h5 class="card-title">{{ category.name }}</h5>
                        <p class="card-text">{{ category.description }}</p>
                        <a href="{{ path('product_list', {'cat': category.id}) }}" class="btn btn-warning">See more!</a>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
{% endblock %}